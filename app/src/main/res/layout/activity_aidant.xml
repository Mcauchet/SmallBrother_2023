<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ombreshape">

    <!-- Cadre Principal -->
    <LinearLayout
        android:id="@+id/cadre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/metalliqueshape" >

        <!-- Entête -->
        <LinearLayout
            android:id="@+id/entete"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:weightSum="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" >

            <!-- Boutons haut-gauche -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".32"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="start" >

                <!-- Bouton Réglages -->
                <Button
                    android:id="@+id/btn_reglages"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:background="@drawable/rouage"
                    android:contentDescription="@string/contentDesc_reglages"
                    android:alpha="0.5"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    style="?android:attr/buttonBarButtonStyle" />

                <!-- Bouton Photo -->
                <Button
                    android:id="@+id/btn_photo"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:contentDescription="@string/contentDesc_photo"
                    android:background="@drawable/photo"
                    android:alpha="0.6"
                    android:orientation="vertical"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

            <!-- Logo -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/logo2"
                    android:contentDescription="@string/logo_sb" />

            </LinearLayout>

            <!-- Bouton Réduire -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="end" >

                <Button
                    android:id="@+id/btn_reduire"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:contentDescription="@string/contentDesc_reduire"
                    android:background="@drawable/reduire"
                    android:alpha="0.33"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5" />

            </LinearLayout>

        </LinearLayout>

    <!-- Ligne 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="#404040"
        android:alpha="0.1" />

        <!-- Cadre Log -->
        <LinearLayout
            android:id="@+id/cadre1C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/metalliqueshape" >

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/log_texte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="@string/contentDesc_log"
                    android:orientation="vertical"
                    android:text="@string/blank"
                    android:textColor="#404040"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <!-- Cadre Boutons -->
    <LinearLayout
        android:id="@+id/cadre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/metalliqueshape"
        app:layout_constraintTop_toBottomOf="@id/cadre1" >

        <!-- Bouton SMS -->
        <FrameLayout
            android:id="@+id/contour1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_sms_va_dant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/btn_sms_va_dant"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />

        </FrameLayout>

        <!-- Bouton Appel -->
        <FrameLayout
            android:id="@+id/contour2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_appel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/btn_appel"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />

        </FrameLayout>

        <!-- Ligne 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:background="#404040"
            android:alpha="0.1" />

        <!-- Bouton Urgence -->
        <FrameLayout
            android:id="@+id/contour3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_urgence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/btn_urgence"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />

        </FrameLayout>

        <!--Bouton Fichiers-->
        <FrameLayout
            android:id="@+id/contour4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/btn_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/recuperer_les_donnees_de_l_aide"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:shadowColor="#000000"
                android:shadowRadius="5" />

        </FrameLayout>

    <!-- Ligne 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:background="#404040"
            android:alpha="0.1" />

        <!-- Logo UNamur -->
        <!--ImageView
            android:id="@+id/unamur"
            android:layout_width="104dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:src="@drawable/unamur"
            android:alpha="0.60"
            android:contentDescription="@string/logo_unamur" />-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>