<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ombreshape">

    <!-- Cadre Principal -->
    <LinearLayout
        android:id="@+id/cadre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/metalliqueshape" >

        <!-- Entête -->
        <LinearLayout
            android:id="@+id/cadre1B"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:weightSum="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" >

            <!-- Bouton Retour -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="start" >

                <Button
                    android:id="@+id/btn_retour"
                    android:layout_height="28dp"
                    android:layout_width="28dp"
                    android:background="@drawable/retour"
                    android:alpha="0.33"
                    android:onClick="retour"
                    android:orientation="vertical"
                    android:textSize="17sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5" />

            </LinearLayout>

            <!-- Logo -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/logo2" />

            </LinearLayout>

            <!-- Case vide -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:gravity="end" > </LinearLayout>

        </LinearLayout>

        <!-- Ligne 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:background="#404040"
            android:alpha="0.1" />

        <!-- Cadre entête -->
        <LinearLayout
            android:id="@+id/cadre1C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:gravity="center" >

            <!-- Titre -->
            <TextView
                android:id="@+id/reglages_intitule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:text="@string/btn_reinit_3"
                android:textColor="#404040"
                android:textSize="21sp" />

        </LinearLayout>

        <!-- Aperçu -->
        <ImageView
            android:id="@+id/apercu"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" >

            <Button
                android:id="@+id/btn_capture"
                android:onClick="capture"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_width="0dip"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/boutonsshape"
                android:textColor="#FFFFFF"
                android:text="@string/btn_capture2"
                android:textAllCaps="false"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_terminer"
                android:layout_height="wrap_content"
                android:layout_weight=".45"
                android:layout_width="0dip"
                android:onClick="terminer"
                android:orientation="vertical"
                android:layout_below="@id/btn_role1"
                android:text="@string/btn_sauver"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />
        </LinearLayout>

        <!-- Ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:background="#404040"
            android:alpha="0.1" />

        <!-- Logo UNamur -->
        <ImageView
            android:id="@+id/unamur"
            android:layout_width="104dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:src="@drawable/unamur"
            android:alpha="0.60" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>