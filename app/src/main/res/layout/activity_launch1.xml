<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Launch1Activity"
    android:orientation="vertical"
    android:background="@drawable/ombreshape" >


    <!-- Cadre Logo -->
    <LinearLayout
        android:id="@+id/fieldset1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/metalliqueshape" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo2" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/indication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/indic_launch1"
            android:textColor="#000000"
            android:textSize="17sp" />

    </LinearLayout>


    <!-- Cadre Bouton -->
    <LinearLayout
        android:id="@+id/fieldset2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/metalliqueshape"
        app:layout_constraintTop_toBottomOf="@id/fieldset1"
        android:layout_below="@id/fieldset1" >

        <FrameLayout
            android:id="@+id/contour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_commencer"
                android:onClick="commencer"
                android:orientation="vertical"
                android:text="@string/btn_commencer"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boutonsshape"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />

        </FrameLayout>

    </LinearLayout>


    <!-- Cadre UNamur -->
    <LinearLayout
        android:id="@+id/fieldset3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@id/fieldset2" >

        <LinearLayout
            android:id="@+id/fieldset4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="vertical"
            android:background="@drawable/metalliqueshape" >

            <ImageView
                android:id="@+id/unamur"
                android:layout_width="128dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:src="@drawable/unamur" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>